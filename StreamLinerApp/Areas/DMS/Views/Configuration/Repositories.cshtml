@model IEnumerable<StreamLinerViewModelLayer.ModelDTO.ListRepositoriesViewModel>
@{
    ViewData["Title"] = " DMS Configuration ";

}
<br />
<partial name="_ConfigurationDMS" />
<br />
<a href="Repository/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add New Repository</a>
<br />
<br />
<h4>
     @if(ViewData["RepoCount"]=="0"){  } else {
    <span class="badge bg-info">@ViewData["RepoCount"]</span>
    }
 Repositories
</h4>
 
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4 p-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <img src="~/img/ico/Disk.png" width="100%" alt="Card image">
                        </div>
                        <div class="col-9">
                            <h4 class="card-title">  @item.RepositoryName</h4>
                            <p class="card-text"> @item.Description</p>


                            <a href="#" class="btn btn-primary"><i class="fa fa-cloud"></i></a>
                            <a href="#" class="btn btn-info"><i class="fa fa-info-circle"></i></a>
                            <a href="#" class="btn btn-success"><i class="fa fa-edit"></i></a>
                            <a href="#" class="btn btn-warning"><i class="fa fa-lock"></i></a>
                            <a href="#" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
     
</div>
