@model StreamLinerViewModelLayer.HRViewModel.AllowanceViewModel

@{
    ViewData["Title"] = "Create";
    
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartnerId" class="control-label"></label>
                <select asp-for="PartnerId" class="form-control select2" asp-items="ViewBag.PartnerId">
                    <option value="0" data=""></option>
                </select>
                <span asp-validation-for="PartnerId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label id="ValueLabel" asp-for="ViewValue" class="control-label"></label>
                <input asp-for="ViewValue" class="form-control text-center" type="number" value="0" />
                <span asp-validation-for="ViewValue" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AllowanceDate" class="control-label"></label>
                <input asp-for="AllowanceDate" class="form-control" type="date" />
                <span asp-validation-for="AllowanceDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="HRAllowanceTypeId" class="control-label"></label>
                <select asp-for="HRAllowanceTypeId" class="form-control select2" asp-items="ViewBag.HRAllowanceTypeId">
                    <option value="0" data=""></option>
                </select>
                <span asp-validation-for="HRAllowanceTypeId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
 

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </div>
    </div>
</form>

<script>
    $(function () {
        $("#BenefitType").change(function () {
            $.ajax({
                success: function (data) {
                    if ($(this).val() == 1) {
                        $("#ValueLabel").("");
                        $("#ValueLabel").val.("Value LE");
                    }
                    else if ($(this).val() == 2) {
                        $("#ValueLabel").("");
                        $("#ValueLabel").val.("Count Of Days");
                    }
                    else if ($(this).val() == 3) {
                        $("#ValueLabel").("");
                        $("#ValueLabel").val.("Count Of Hour");
                    }

                },
                error: function (response) {
                    console.log(response.responseText);
                }
            });
        });
    });
</script>