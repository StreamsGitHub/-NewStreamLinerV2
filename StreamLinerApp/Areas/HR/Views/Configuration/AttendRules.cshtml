@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRAttendRole>

@{
    ViewData["Title"] = "Index";
    
}
<partial name="_ConfigurationMenu" />
<br />
<p>
    <a class="btn btn-primary" asp-action="CreateAttendRule" > <i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameAttendRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LateMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyMin)
            </th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAttendRole)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LateMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PenaltyMin)
                </td>

                <td>
                    <a asp-action="EditAttendRule" class="btn btn-info" asp-route-id="@item.AttendRoleId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeleteAttendRule" class="btn btn-danger" asp-route-id="@item.AttendRoleId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
