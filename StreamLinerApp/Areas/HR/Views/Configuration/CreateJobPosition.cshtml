@model StreamLinerEntitiesLayer.HREntities.HRJobPositions

@{
    ViewData["Title"] = "Create JobPosition";
    
}

<partial name="_ConfigurationMenu" />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJobPosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JobTitel" class="control-label"></label>
                <input asp-for="JobTitel" class="form-control" />
                <span asp-validation-for="JobTitel" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
            <label asp-for="DepartmentId" class="control-label">Department</label>
                <select asp-for="DepartmentId" class ="form-control" asp-items="ViewBag.DepartmentId">
            <option value="0" data=""></option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ExpectedNewEmployees" class="control-label"></label>
                <input asp-for="ExpectedNewEmployees" class="form-control" />
                <span asp-validation-for="ExpectedNewEmployees" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="JobDescription" class="control-label"></label>
                <input asp-for="JobDescription" class="form-control" />
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a  asp-action="JobPositions" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>


