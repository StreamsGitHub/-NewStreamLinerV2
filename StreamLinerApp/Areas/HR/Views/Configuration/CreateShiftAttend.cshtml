@model StreamLinerEntitiesLayer.HREntities.HRShiftAttend

@{
    ViewData["Title"] = "Create";
    
}

<partial name="_ConfigurationMenu" />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateShiftAttend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShiftName" class="control-label"></label>
                <input asp-for="ShiftName" class="form-control" />
                <span asp-validation-for="ShiftName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ShiftStart" class="control-label"></label>
                <input asp-for="ShiftStart" type="time" class="form-control" />
                <span asp-validation-for="ShiftStart" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ShiftEnd" class="control-label"></label>
                <input asp-for="ShiftEnd" type="time" class="form-control" />
                <span asp-validation-for="ShiftEnd" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="ShiftAttends" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>


