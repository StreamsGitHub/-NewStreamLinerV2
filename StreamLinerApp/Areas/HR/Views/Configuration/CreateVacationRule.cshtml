@model StreamLinerViewModelLayer.HRViewModel.CreateVacationRulesViewModel

@{
    ViewData["Title"] = "Create Leave Rules";
    
}
<partial name="_ConfigurationMenu" />
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <form asp-action="CreateVacationRule">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="VacationRuleName" class="control-label"></label>
                        <input asp-for="VacationRuleName" class="form-control" />
                        <span asp-validation-for="VacationRuleName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="VacationDesc" class="control-label"></label>
                        <input asp-for="VacationDesc" class="form-control" />
                        <span asp-validation-for="VacationDesc" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" /> |
                        <a asp-action="VacationRules" class="btn btn-dark">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

