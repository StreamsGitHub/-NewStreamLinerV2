@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRDegree>

@{
    ViewData["Title"] = "Index";
    
}

<partial name="_ConfigurationMenu" />
<br />

<p>
    <a class="btn btn-primary" asp-action="CreateDegree">  <i class="fa fa-plus"></i> Create New  </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DegreeName)
            </th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeName)
                </td>

                <td>
                    <a asp-action="EditDegree" class="btn btn-info" asp-route-id="@item.HRDegreeId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeleteDegree" class="btn btn-danger" asp-route-id="@item.HRDegreeId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
