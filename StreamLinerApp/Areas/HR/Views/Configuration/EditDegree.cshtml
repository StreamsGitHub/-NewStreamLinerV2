@model StreamLinerEntitiesLayer.HREntities.HRDegree

@{
    ViewData["Title"] = "Edit";
    
}

<partial name="_ConfigurationMenu" />
<br />


<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDegree">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HRDegreeId" />
            <div class="form-group">
                <label asp-for="DegreeName" class="control-label"></label>
                <input asp-for="DegreeName" class="form-control" />
                <span asp-validation-for="DegreeName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Degrees" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>


