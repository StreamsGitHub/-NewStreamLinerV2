@model StreamLinerEntitiesLayer.HREntities.HRPenaltyTypes

@{
    ViewData["Title"] = "Edit";
    
}


<partial name="_ConfigurationMenu" />
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPenaltyType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HRPenaltyTypesId" />
            <div class="form-group">
                <label asp-for="HRPenaltyTypeName" class="control-label"></label>
                <input asp-for="HRPenaltyTypeName" class="form-control" />
                <span asp-validation-for="HRPenaltyTypeName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a asp-action="PenaltyTypes" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
