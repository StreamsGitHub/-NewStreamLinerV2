@model StreamLinerEntitiesLayer.HREntities.HRStage

@{
    ViewData["Title"] = "Edit Stage";
    
}

<partial name="_ConfigurationMenu" />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HRStageId" />
            <div class="form-group">
                <label asp-for="StageName" class="control-label"></label>
                <input asp-for="StageName" class="form-control" />
                <span asp-validation-for="StageName" class="text-danger"></span>
            </div>   <br />
            <div class="form-group">
                <label asp-for="Requirements" class="control-label"></label>
                <input asp-for="Requirements" class="form-control" />
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Stages" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

