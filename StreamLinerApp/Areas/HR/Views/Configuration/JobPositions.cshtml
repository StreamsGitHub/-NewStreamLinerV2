@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRJobPositions>

@{
    ViewData["Title"] = "Index";
    
}

<partial name="_ConfigurationMenu" />
<br />

<p>
    <a class="btn btn-primary" asp-action="CreateJobPosition">  <i class="fa fa-plus"></i> Create New    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HRDepartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedNewEmployees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobDescription)
            </th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRDepartment.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedNewEmployees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobDescription)
                </td>

                <td>
                    <a asp-action="EditJobPosition" class="btn btn-info" asp-route-id="@item.JobId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeleteJobPosition" class="btn btn-danger" asp-route-id="@item.JobId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
