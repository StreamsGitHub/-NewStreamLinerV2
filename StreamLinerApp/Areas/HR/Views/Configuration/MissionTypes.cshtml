@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRMissionType>

@{
    ViewData["Title"] = "Index";
    
}

<partial name="_ConfigurationMenu" />
<br />
<p>
    <a class="btn btn-primary" asp-action="CreateMissionType">    <i class="fa fa-plus"></i> Create New   </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HRMissionTypeName)
            </th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HRMissionTypeName)
                </td>

                <td>

                    <a asp-action="EditMissionType" class="btn btn-info" asp-route-id="@item.HRMissionTypeId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeleteMissionType" class="btn btn-danger" asp-route-id="@item.HRMissionTypeId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
