@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRPenaltyTypes>

@{
    ViewData["Title"] = "Index";
    
}
<partial name="_ConfigurationMenu" />
<br />

<p>
    <a class="btn btn-primary" asp-action="CreatePenaltyType">    <i class="fa fa-plus"></i> Create New   </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HRPenaltyTypeName)
            </th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HRPenaltyTypeName)
                </td>

                <td>
                    <a asp-action="EditPenaltyType" class="btn btn-info" asp-route-id="@item.HRPenaltyTypesId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeletePenaltyType" class="btn btn-danger" asp-route-id="@item.HRPenaltyTypesId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
