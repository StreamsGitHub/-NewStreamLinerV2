@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRShiftAttend>

@{
    ViewData["Title"] = "Index";
    
}
<partial name="_ConfigurationMenu" />
<br />
<p>
    <a class="btn btn-primary" asp-action="CreateShiftAttend">  <i class="fa fa-plus"></i> Create New   </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShiftName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftCount)
            </th>

            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftCount)
                </td>

                <td>

                    <a asp-action="EditShiftAttend" class="btn btn-info" asp-route-id="@item.HRShiftAttendId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeleteShiftAttend" class="btn btn-danger" asp-route-id="@item.HRShiftAttendId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
