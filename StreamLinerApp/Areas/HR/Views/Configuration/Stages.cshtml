@model IEnumerable<StreamLinerEntitiesLayer.HREntities.HRStage>

@{
    ViewData["Title"] = "Index";
    
}
<partial name="_ConfigurationMenu" />
<br />
<p>
    <a class="btn btn-primary" asp-action="CreateStage">  <i class="fa fa-plus"></i> Create New  </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requirements)
            </th>
            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requirements)
                </td>
                <td>
                    <a asp-action="EditStage" class="btn btn-info" asp-route-id="@item.HRStageId"><i class="fa fa-eye"></i></a> |
                    <a asp-action="DeleteStage" class="btn btn-danger" asp-route-id="@item.HRStageId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
