@model StreamLinerViewModelLayer.HRViewModel.PenaltiesViewModel

@{
    ViewData["Title"] = "Create";
    
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartnerId" class="control-label"></label>
                <select asp-for="PartnerId" class="form-control" asp-items="ViewBag.PartnerId">
                    <option value="0" data=""></option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="PenaltyType" class="control-label"></label>
                <select id="PenaltyType" asp-for="PenaltyType" class="form-control select2" asp-items="ViewBag.PenaltyType">
                    <option value="0">Choose Penalty Type</option>
                    <option value="1"> Value </option>
                    <option value="2"> Days </option>
                    <option value="3"> Hour </option>
                </select>
            </div>
            <div class="form-group">
                <label id="ValueLabel" asp-for="ViewValue" class="control-label"></label>
                <input asp-for="ViewValue" class="form-control" />
                <span asp-validation-for="ViewValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PenaltyDate" class="control-label"></label>
                <input asp-for="PenaltyDate" class="form-control" type="date" />
                <span asp-validation-for="PenaltyDate" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="HRPenaltyTypesId" class="control-label"></label>
                <select asp-for="HRPenaltyTypesId" class="form-control" asp-items="ViewBag.HRPenaltyTypesId">
                    <option value="0" data=""></option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </div>
    </div>
</form>

<script>
    $(function () {
        $("#PenaltyType").change(function () {
            $.ajax({
                success: function (data) {
                    if ($(this).val() == 1) {
                        $("#ValueLabel").("");
                        $("#ValueLabel").val.("Value LE");
                    }
                    else if ($(this).val() == 2) {
                        $("#ValueLabel").("");
                        $("#ValueLabel").val.("Count Of Days");
                    }
                    else if ($(this).val() == 3) {
                        $("#ValueLabel").("");
                        $("#ValueLabel").val.("Count Of Hour");
                    }

                },
                error: function (response) {
                    console.log(response.responseText);
                }
            });
        });
    });
</script>