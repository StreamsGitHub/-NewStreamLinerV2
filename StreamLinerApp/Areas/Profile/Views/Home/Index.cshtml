@model StreamLinerViewModelLayer.ModelDTO.userDto;
 
<br />
<div class="row">
    <div class="col-12">
        <h3 class="text-left">Your info</h3>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <img src="~/img/favicon.png" style="background-color:white;" class="rounded-circle img-thumbnail" width="150" alt="Alternate Text" />
            </div>
            <div class="col-10">
                <h4 class="text-left">@Model.FirstName</h4>
                <p class="text-left">@Model.EmailAddress</p>
                <br />
                <a asp-action="EditProfile" asp-controller="Profile" asp-area="Profile" class="btn btn-primary" title="Edit"><i class="fa fa-edit"></i></a> |
                <a asp-action="ChangePassword" asp-controller="Profile" asp-area="Profile" class="btn btn-success" title="Change Password"><i class="fa fa-key"></i></a>|
                <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-info" title="Change Picture Profile"><i class="fa fa-image"></i></a>|
                <a asp-action="Logout" asp-controller="Account" asp-area="Identity" class="btn btn-danger" title="Logout"><i class="fa fa-sign-out"></i></a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="card">
    <div class="card-body">
        <p><b>Profile info</b></p>
        <p class="text-left">Username: @Model.FirstName</p>
        <p class="text-left">Birth Date: @Model.BirthDate</p>
        <p class="text-left">Hire Date: @Model.HireDate</p>
    </div>
</div>
<br />
<div class="card">
    <div class="card-body">
        <p><b>Account info</b></p>
    </div>
</div>
 

              