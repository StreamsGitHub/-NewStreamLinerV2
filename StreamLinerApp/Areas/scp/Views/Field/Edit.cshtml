 @model StreamLinerViewModelLayer.ModelDTO.FieldDTO 


@{
    ViewData["Title"] = "Fields";
}
<br />
<div class="container">
    <h3> @ViewData["controller"] -   @ViewData["action"]   </h3>
</div>
<hr />


<div class="container mt-5">

    <div class="row">

        <div class="col-md-6">


            <form method="post"  asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="FieldName" class="form-label"></label>
                    <input asp-for="FieldName" type="text" class="form-control" >
                </div>
                <div class="mb-3">
                    <label asp-for="TypeName" class="form-label"></label>
                    <select asp-for="TypeId" class="form-select" asp-items="ViewBag.TypeId">
                        <option value="">--Select Type--</option>
                    
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Placeholder" class="form-label"></label>
                    <input asp-for="Placeholder" type="text" class="form-control">
                </div>
              

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
