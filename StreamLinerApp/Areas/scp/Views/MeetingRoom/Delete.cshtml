@model StreamLinerViewModelLayer.ModelDTO.MeetingRoomDTO


@{
    ViewData["Title"] = "MeetingRooms";
}
<br />
<div class="container">
    <h3> @ViewData["controller"] -   @ViewData["action"]   </h3>
</div>
<hr />

<div class="container mt-5">

    <div class="row">

        <div class="col-md-6">

            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input disabled asp-for="Name" type="text" class="form-control">
            </div>


            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="modal" id="deleteModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Delete Confirmed</h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this field
                            </div>
                            <div class="modal-footer">
                                <input type="submit" class="btn btn-danger" name="name" value="Delete" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



