@model IEnumerable<StreamLinerViewModelLayer.ModelDTO.MeetingRoomDTO>

@{
    ViewData["Title"] = "Meetings";
}
<br />
<div class="row container">
    <div class="col-4">
        <h3>   @ViewData["controller"]  @ViewData["action"] </h3>
    </div>
    <div class="col-8 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New Room</a>
    </div>
</div>
<hr />

 

<div class="row ">

    <div class="col-12 p-4">
        <table class="table table-hover">
            <thead>
                <tr>
                 @*    <th><input type="checkbox" name="" id=""></th> *@
                    <th>Room Name</th>
                   
                    <th style="width:150px;"> Action </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       @*  <td><input type="checkbox" name="" id=""></td> *@
                        <td>@item.Name</td>
                       
                        <td>

                            <a asp-controller="MeetingRoom" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"> <i class="fa fa-edit"></i></a>
                            <a asp-controller="MeetingRoom" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> </a>

                        </td>

                    </tr>
                }


            </tbody>
        </table>

    </div>

</div>