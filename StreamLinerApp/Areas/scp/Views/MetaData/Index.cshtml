@model IEnumerable<StreamLinerViewModelLayer.ModelDTO.MetaDataDTO>

@{
    ViewData["Title"] = "MetaData";
}
<br />
<div class="row container">
    <div class="col-4">
        <h3>   @ViewData["controller"]  @ViewData["action"] </h3>
    </div>
    <div class="col-8 text-right">
        @*  <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New MetaData Template</a> *@


        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTemplate">
            <i class="fa fa-plus"></i> New Template
        </button>
        <div class="modal" id="newTemplate">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-action="CreateTemplate">

                        <div class="modal-body">
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Template name" required>
                            <br />
                            <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter Description" required>
                            <br />
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

<div class="row ">

    <div class="col-12 p-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    @*     <th><input type="checkbox" name="" id=""></th> *@
                    <th>MetaData</th>
                    <th>Description</th>
                    <th style="width:150px;"> Action </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*  <td><input type="checkbox" name="" id=""></td> *@
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-controller="MetaData" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"> <i class="fa fa-edit"></i></a>
                            <a asp-controller="MetaData" asp-action="add" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-eye"></i> </a>
                            <form asp-controller="MetaData" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this field?');">
                                     <i class='fa fa-trash'></i>
                                </button>
                            </form>
                        </td>

                    </tr>
                }


            </tbody>
        </table>

    </div>

</div>