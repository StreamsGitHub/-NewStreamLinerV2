@model StreamLinerViewModelLayer.ModelDTO.LoginViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Streamliner | Login </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>

    <!-- Top Navigation Bar  <div>CMS</div>-->
    <div class="topbar d-flex justify-content-between align-items-center">
        <div class="fw-bold">Streamliner<sup>®</sup></div>

    </div>

    <!-- Login Centered Box -->
    <div class="container d-flex flex-column justify-content-center align-items-center" style="flex: 1;padding-top: 100px;">

        <div class="login-box">
            <img src="~/img/loginlogo.png" width="100%" alt="">
            <hr>
            <h3 class="text-danger text-center">Access Denied</h3>
            <br>
        
            <p>
                You do not have permission to access this resource. 
                Please contact your administrator if you believe this is an error.
            </p>
            <a asp-action="index" asp-controller="Home" asp-area="" class="btn btn-dark" style="width:100%;" > <i class="fa fa-home"></i> Back to Home</a>
        </div>
        <div class="footer">
            Version 2.0 | © 2025 <a href="https://streams-services.com/" class="text-decoration-none">Streamliner</a>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
