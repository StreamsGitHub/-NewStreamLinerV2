@model StreamLinerViewModelLayer.ModelDTO.LoginViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Streamliner | Login </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>

    <!-- Top Navigation Bar  <div>CMS</div>-->
    <div class="topbar d-flex justify-content-between align-items-center">
        <div class="fw-bold">Streamliner<sup>®</sup></div>

    </div>

    <!-- Login Centered Box -->
    <div class="container d-flex flex-column justify-content-center align-items-center" style="flex: 1;padding-top: 100px;">

        <div class="login-box">
            <img src="~/img/loginlogo.png" width="100%" alt="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br><br>
            <hr>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" id="Email" value="">
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="Password" value="">
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="RememberMe" asp-for="RememberMe">
                    <label class="form-check" asp-for="RememberMe">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary w-100" style="background-color: #0069ba;">Sign In</button>
            </form>
        </div>
        <div class="footer">
            Version 2.0 | © 2025 <a href="https://streams-services.com/" class="text-decoration-none">Streamliner</a>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
