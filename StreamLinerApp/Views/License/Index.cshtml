@model StreamLinerViewModelLayer.ModelDTO.AdminViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Streamliner | Login </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="topbar d-flex justify-content-between align-items-center">
        <div class="fw-bold">Streamliner<sup>®</sup></div>

    </div>
    <!-- Login Centered Box -->
    <div class="container d-flex flex-column justify-content-center align-items-center" style="flex: 1;padding-top: 100px;">

        <div class="login-box">
            <img src="~/img/loginlogo.png" width="100%" alt="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <hr>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>


                <p>Please download the License file and then send it to us.  </p>
                <p> <b> License Key:</b></p>
                <input asp-for="LicenseKey" class="form-control" />
                <span asp-validation-for="LicenseKey"></span>
                <br />
                <button asp-action="download" type="submit" class="btn btn-primary w-100" style="background-color: #004a7c;">
                  <i class="fa fa-key"></i>  Active License Key
                </button>
               @*  <br /> <br />
                <div>
                    <p>    <b>Upload License File:</b></p>
                    <input type="file" name="licenseFile" />
                </div>
                <br />
                <button asp-action="Upload" type="submit" class="btn btn-primary w-100" style="background-color: #0069ba;">Upload Licence File</button> *@
            </form>
        </div>
    </div>
</body>
</html>
